#pragma once

#if defined(STM32F407ZG)
  #include <stm32f407xx.h>
  #define _LMCU_DEVICE_STM32_
  #define _LMCU_DEVICE_STM32F4_
#elif defined(STM32F429IG)
  #include <stm32f429xx.h>
  #define _LMCU_DEVICE_STM32_
  #define _LMCU_DEVICE_STM32F4_
#elif defined(STM32F103C8) || defined(STM32F103CB)
  #include <stm32f103xb.h>
  #define _LMCU_DEVICE_STM32_
  #define _LMCU_DEVICE_STM32F1_
#elif defined(STM32F107VC) || defined(STM32F107RC)
  #include <stm32f107xc.h>
  #define _LMCU_DEVICE_STM32_
  #define _LMCU_DEVICE_STM32F1_
#else
  #error "device not supported"
#endif
